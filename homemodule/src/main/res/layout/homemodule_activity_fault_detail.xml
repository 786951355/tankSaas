<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/homemodule_label_fault"
                    android:text="@string/homemodule_label_plate_number" />

                <TextView
                    android:id="@+id/tv_plate"
                    style="@style/homemodule_text_fault_mileage"
                    android:text="皖Q23456" />
            </LinearLayout>

            <View style="@style/homemodule_line_fault_mileage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label_fault"
                    style="@style/homemodule_label_fault"
                    tools:text="@string/homemodule_label_fault" />

                <TextView
                    android:id="@+id/tv_fault"
                    style="@style/homemodule_text_fault_mileage"
                    android:text="故障描述" />
            </LinearLayout>

            <View style="@style/homemodule_line_fault_mileage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label_address"
                    style="@style/homemodule_label_fault"
                    android:text="@string/homemodule_label_address" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/homemodule_text_fault_mileage"
                    android:text="手机定位地址" />
            </LinearLayout>

            <View style="@style/homemodule_line_fault_mileage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label_time"
                    style="@style/homemodule_label_fault"
                    android:text="@string/homemodule_label_fault_time" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/homemodule_text_fault_mileage"
                    tools:text="2018-07-18 13:40" />

            </LinearLayout>

            <View style="@style/homemodule_line_fault_mileage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/homemodule_label_fault"
                    android:text="@string/homemodule_label_fault_pictures" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <View style="@style/homemodule_line_fault_mileage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/homemodule_label_fault"
                    android:text="@string/homemodule_label_remark" />

                <TextView
                    android:id="@+id/tv_remark"
                    style="@style/homemodule_text_fault_mileage"
                    android:text="备注" />
            </LinearLayout>

            <View style="@style/homemodule_line_fault_mileage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/homemodule_label_fault"
                    android:text="@string/homemodule_label_reporter" />

                <TextView
                    android:id="@+id/tv_reporter"
                    style="@style/homemodule_text_fault_mileage" />
            </LinearLayout>

            <View style="@style/homemodule_line_fault_mileage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/homemodule_label_fault"
                    android:text="@string/homemodule_label_report_time" />

                <TextView
                    android:id="@+id/tv_report_time"
                    style="@style/homemodule_text_fault_mileage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/homemodule_label_fault"
                        android:text="@string/homemodule_label_solve_method" />

                    <TextView
                        android:id="@+id/tv_method"
                        style="@style/homemodule_text_fault_mileage" />
                </LinearLayout>

                <View style="@style/homemodule_line_fault_mileage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/homemodule_label_fault"
                        android:text="@string/homemodule_label_repair_branch" />

                    <TextView
                        android:id="@+id/tv_branch"
                        style="@style/homemodule_text_fault_mileage" />
                </LinearLayout>

                <View style="@style/homemodule_line_fault_mileage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/homemodule_label_fault"
                        android:text="@string/homemodule_label_solve_man" />

                    <TextView
                        android:id="@+id/tv_sovle_man"
                        style="@style/homemodule_text_fault_mileage" />
                </LinearLayout>

                <View style="@style/homemodule_line_fault_mileage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/homemodule_label_fault"
                        android:text="@string/homemodule_label_solve_time" />

                    <TextView
                        android:id="@+id/tv_solve_time"
                        style="@style/homemodule_text_fault_mileage" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:padding="16dp"
        android:src="@drawable/homemodule_icon_resolved" />
</FrameLayout>
