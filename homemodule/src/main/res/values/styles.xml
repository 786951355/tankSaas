<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="homemodule_item_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">102dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="homemodule_item_header_bg">
        <item name="android:layout_width">98dp</item>
        <item name="android:layout_height">102dp</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>

       <style name="homemodule_item_icon_style">
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


       <style name="homemodule_item_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
    </style>

   <style name="homemodule_item_content_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
    </style>







</resources>