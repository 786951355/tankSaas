<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="homemodule_item_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">102dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="homemodule_item_header_bg">
        <item name="android:layout_width">98dp</item>
        <item name="android:layout_height">102dp</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="homemodule_item_icon_style">
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


    <style name="homemodule_item_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="homemodule_item_content_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">20dp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 故障上报&里程上报分割线 -->
    <style name="homemodule_line_fault_mileage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#DDDDDD</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!-- 故障上报&里程上报Base label style -->
    <style name="homemodule_label_fault_mileage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- 故障上报&里程上报Base label style -->
    <style name="homemodule_label_fault_mileage_constraint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- 故障上报&里程上报Base text style -->
    <style name="homemodule_text_fault_mileage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!-- 故障上报&里程上报Base text style -->
    <style name="homemodule_text_fault_mileage_constraint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!-- 故障上报&里程上报Base text style -->
    <style name="homemodule_remark_fault_mileage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- 故障上报label style -->
    <style name="homemodule_label_fault" parent="homemodule_label_fault_mileage">
        <item name="android:minWidth">90dp</item>
    </style>
</resources>